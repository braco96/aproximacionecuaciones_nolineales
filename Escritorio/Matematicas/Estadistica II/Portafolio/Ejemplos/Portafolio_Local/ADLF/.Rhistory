# 1. Lista consolidada de todos los paquetes necesarios
paquetes_requeridos <- c(
# --- Utilidades y Base ---
"pacman",        # Gestión de paquetes
"knitr",         # Procesamiento de Rmd y gráficos
# --- Visualización ---
"ggplot2",       # Gráficos avanzados (Todos los proyectos)
"GGally",        # Matriz de diagramas de dispersión (ACP)
"scatterplot3d", # Gráficos en 3D (ADLF)
"corrplot",      # Visualización de matrices de correlación (RLM)
"ggfortify",     # Visualización automática de resultados (ACP Anexo)
# --- Modelado y Análisis Estadístico ---
"MASS",          # LDA, Simulación normal multivariante (ADLF)
"gmodels",       # Tablas de contingencia/confusión (ADLF)
"CCA",           # Correlación Canónica (CC)
"CCP",           # Tests de significancia para CCA (CC)
"lmtest",        # Tests de diagnóstico: Breusch-Pagan (RLM)
"car"            # Tests de diagnóstico: Durbin-Watson (RLM)
)
# 2. Función de instalación inteligente
instalar_faltantes <- function(paquetes) {
# Identificar qué paquetes no están instalados
nuevos_paquetes <- paquetes[!(paquetes %in% installed.packages()[,"Package"])]
if(length(nuevos_paquetes) > 0) {
message("Instalando paquetes faltantes: ", paste(nuevos_paquetes, collapse = ", "))
# dependencies = TRUE es crucial para paquetes como 'car' o 'GGally'
install.packages(nuevos_paquetes, dependencies = TRUE)
message("✅ Instalación completada.")
} else {
message("✅ Todos los paquetes ya están instalados y listos.")
}
}
# 3. Ejecutar
instalar_faltantes(paquetes_requeridos)
# 4. Verificación de carga
message("\nVerificando carga de librerías...")
sapply(paquetes_requeridos, require, character.only = TRUE)
